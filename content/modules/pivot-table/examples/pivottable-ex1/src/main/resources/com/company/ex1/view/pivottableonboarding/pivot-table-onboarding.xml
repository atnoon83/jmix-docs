<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:pvttbl="http://jmix.io/schema/pvttbl/ui"
      title="msg://pivotTableOnboarding.title">
    <data>
        <collection id="tipsDc" class="com.company.ex1.entity.TipInfo">
            <fetchPlan extends="_local"/>
            <loader id="tipsLoader">
                <query>
                    <![CDATA[select e from TipInfo e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <pvttbl:pivotTable id="pivotTable" dataContainer="tipsDc" showUI="true">
            <pvttbl:properties>
                <pvttbl:property name="totalBill"/>
                <pvttbl:property name="tip"/>
                <pvttbl:property name="sex"/>
                <pvttbl:property name="smoker"/>
                <pvttbl:property name="day"/>
                <pvttbl:property name="time"/>
                <pvttbl:property name="size"/>
            </pvttbl:properties>
            <pvttbl:columns>
                <pvttbl:column value="day"/>
            </pvttbl:columns>
            <pvttbl:rows>
                <pvttbl:row value="smoker"/>
            </pvttbl:rows>
            <pvttbl:aggregations selected="AVERAGE"/>
            <pvttbl:aggregationProperties>
                <pvttbl:property name="tip"/>
            </pvttbl:aggregationProperties>
        </pvttbl:pivotTable>
    </layout>
</view>