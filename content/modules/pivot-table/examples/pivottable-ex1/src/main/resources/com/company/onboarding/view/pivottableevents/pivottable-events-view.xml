<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:pivot="http://jmix.io/schema/pvttbl/ui"
      title="msg://pivottableEventsView.title">
<data>
    <collection id="temperatureDataDc"
                class="com.company.onboarding.entity.TemperatureData">
        <fetchPlan extends="_local"/>
        <loader id="tipsLoader">
            <query>
                <![CDATA[select e from TemperatureData e]]>
            </query>
        </loader>
    </collection>
</data>
<facets>
    <dataLoadCoordinator auto="true"/>
</facets>
<layout expand="pivotTable" spacing="true">
    <pivot:pivotTable id="pivotTable"
                      dataContainer="temperatureDataDc"
                      showColumnTotals="false"
                      showRowTotals="false" showUI="true">
        <pivot:properties>
            <pivot:property name="temperature"/>
            <pivot:property name="city"/>
            <pivot:property name="month"/>
        </pivot:properties>
        <pivot:columns>
            <pivot:column value="msg://com.company.onboarding.entity/TemperatureData.month"/>
        </pivot:columns>
        <pivot:rows>
            <pivot:row value="msg://com.company.onboarding.entity/TemperatureData.city"/>
        </pivot:rows>
        <pivot:aggregations selected="AVERAGE">
            <pivot:aggregation mode="AVERAGE"/>
            <pivot:aggregation mode="COUNT"/>
            <pivot:aggregation mode="MAXIMUM"/>
        </pivot:aggregations>
        <pivot:aggregationProperties>
            <pivot:property name="msg://com.company.onboarding.entity/TemperatureData.temperature"/>
        </pivot:aggregationProperties>
    </pivot:pivotTable>
</layout>
</view>