<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:pvttbl="http://jmix.io/schema/pvttbl/ui"
      title="msg://withAggregationView.title">
    <data>
        <collection id="tipsDc"
                    class="com.company.ex1.entity.TipInfo">
            <fetchPlan extends="_local"/>
            <loader id="tipsLoader">
                <query>
                    <![CDATA[select e from TipInfo e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <!-- tag::pivotTable[] -->
        <pvttbl:pivotTable dataContainer="tipsDc">
            <pvttbl:properties>
                <pvttbl:property name="totalBill"/>
                <pvttbl:property name="tip"/>
                <pvttbl:property name="sex"/>
                <pvttbl:property name="smoker"/>
                <pvttbl:property name="day"/>
                <pvttbl:property name="time"/>
                <pvttbl:property name="size"/>
            </pvttbl:properties>
            <pvttbl:columns>
                <pvttbl:column value="msg://com.company.ex1.entity/TipInfo.day"/>
                <pvttbl:column value="msg://com.company.ex1.entity/TipInfo.time"/>
            </pvttbl:columns>
            <pvttbl:rows>
                <pvttbl:row value="msg://com.company.ex1.entity/TipInfo.sex"/>
                <pvttbl:row value="msg://com.company.ex1.entity/TipInfo.smoker"/>
            </pvttbl:rows>
            <pvttbl:aggregation mode="SUM">
                <pvttbl:property name="tip"/>
            </pvttbl:aggregation>
        </pvttbl:pivotTable>
        <!-- end::pivotTable[] -->
    </layout>
</view>