<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:pvttbl="http://jmix.io/schema/pvttbl/ui"
      title="msg://pivotTableManualDataBindingView.title">
    <!-- tag::empty-collection[] -->
    <data>
        <collection id="tipsDc" class="com.company.onboarding.entity.TipInfo"/>
    </data>
    <!-- end::empty-collection[] -->
    <layout>
        <pvttbl:pivotTable id="tipsPivotTable"
                          dataContainer="tipsDc">
            <pvttbl:properties>
                <pvttbl:property name="totalBill"/>
                <pvttbl:property name="tip"/>
                <pvttbl:property name="sex"/>
                <pvttbl:property name="smoker"/>
                <pvttbl:property name="day"/>
                <pvttbl:property name="time"/>
                <pvttbl:property name="size"/>
            </pvttbl:properties>
            <pvttbl:rows>
                <pvttbl:row value="msg://com.company.onboarding.entity/TipInfo.sex"/>
                <pvttbl:row value="msg://com.company.onboarding.entity/TipInfo.smoker"/>
            </pvttbl:rows>
            <pvttbl:columns>
                <pvttbl:column value="msg://com.company.onboarding.entity/Day"/>
                <pvttbl:column value="msg://com.company.onboarding.entity/TipInfo.time"/>
            </pvttbl:columns>
        </pvttbl:pivotTable>
    </layout>
</view>