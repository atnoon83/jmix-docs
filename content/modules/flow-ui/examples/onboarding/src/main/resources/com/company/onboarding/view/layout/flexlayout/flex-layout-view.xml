<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://flexLayoutView.title">
    <layout>
        <hbox>
            <!-- tag::flexLayout[] -->
            <flexLayout id="flexLayout"
                        flexDirection="COLUMN"
                        expand="button"
                        height="100%"
                        width="100%">
                <button text="Button"/>
                <button id="button" text="Button"/>
                <button text="Button"/>
            </flexLayout>
            <!-- end::flexLayout[] -->
            <tabSheet themeNames="bordered">
                <tab id="tab2" label="fLStart">
                    <!-- tag::flexLayoutStart[] -->
                    <flexLayout contentAlignment="START"
                                css="gap: 0.5em; border: 1px solid #ccc;"
                                width="20em"
                                minHeight="10em"
                                flexWrap="WRAP">
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                    </flexLayout>
                    <!-- end::flexLayoutStart[] -->
                </tab>
                <tab id="tab3" label="fLCenter">
                    <!-- tag::flexLayoutCenter[] -->
                    <flexLayout contentAlignment="CENTER"
                                css="gap: 0.5em; border: 1px solid #ccc;"
                                width="20em"
                                minHeight="10em"
                                flexWrap="WRAP">
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                    </flexLayout>
                    <!-- end::flexLayoutCenter[] -->
                </tab>
                <tab id="tab4" label="fLEnd">
                    <!-- tag::flexLayoutEnd[] -->
                    <flexLayout contentAlignment="END"
                                css="gap: 0.5em; border: 1px solid #ccc;"
                                width="20em"
                                minHeight="10em"
                                flexWrap="WRAP">
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                    </flexLayout>
                    <!-- end::flexLayoutEnd[] -->
                </tab>
                <tab id="tab5" label="fLStretch">
                    <!-- tag::flexLayoutStretch[] -->
                    <flexLayout contentAlignment="STRETCH"
                                css="gap: 0.5em; border: 1px solid #ccc;"
                                width="20em" minHeight="10em"
                                flexWrap="WRAP">
                        <button text="Button" width="9em" height="AUTO"/>
                        <button text="Button" width="9em" height="AUTO"/>
                        <button text="Button" width="9em" height="AUTO"/>
                    </flexLayout>
                    <!-- end::flexLayoutStretch[] -->
                </tab>
                <tab id="tab6" label="fLSpaceBetween">
                    <!-- tag::flexLayoutSpaceBetween[] -->
                    <flexLayout contentAlignment="SPACE_BETWEEN"
                                css="gap: 0.5em; border: 1px solid #ccc;"
                                width="20em" minHeight="10em"
                                flexWrap="WRAP">
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                    </flexLayout>
                    <!-- end::flexLayoutSpaceBetween[] -->
                </tab>
                <tab id="tab7" label="fLSpaceAround">
                    <!-- tag::flexLayoutSpaceAround[] -->
                    <flexLayout contentAlignment="SPACE_AROUND"
                                css="gap: 0.5em; border: 1px solid #ccc;"
                                width="20em" minHeight="10em"
                                flexWrap="WRAP">
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                        <button text="Button" width="9em"/>
                    </flexLayout>
                    <!-- end::flexLayoutSpaceAround[] -->
                </tab>
            </tabSheet>
        </hbox>
        <hbox>
            <tabSheet themeNames="bordered">
                <tab id="tab_1" label="fDRow">
                    <!-- tag::flexDirectionRow[] -->
                    <flexLayout flexDirection="ROW"
                                css="gap: 0.5em">
                        <button text="Button 1"/>
                        <button text="Button 2"/>
                        <button text="Button 3"/>
                    </flexLayout>
                    <!-- end::flexDirectionRow[] -->
                </tab>
                <tab id="tab_2" label="fDRowReverse">
                    <!-- tag::flexDirectionRowReverse[] -->
                    <flexLayout flexDirection="ROW_REVERSE"
                                css="gap: 0.5em">
                        <button text="Button 1"/>
                        <button text="Button 2"/>
                        <button text="Button 3"/>
                    </flexLayout>
                    <!-- end::flexDirectionRowReverse[] -->
                </tab>
            </tabSheet>
            <!-- tag::flexDirectionColumn[] -->
            <flexLayout flexDirection="COLUMN">
                <button text="Button 1"/>
                <button text="Button 2"/>
                <button text="Button 3"/>
            </flexLayout>
            <!-- end::flexDirectionColumn[] -->
            <!-- tag::flexDirectionColumnReverse[] -->
            <flexLayout flexDirection="COLUMN_REVERSE">
                <button text="Button 1"/>
                <button text="Button 2"/>
                <button text="Button 3"/>
            </flexLayout>
            <!-- end::flexDirectionColumnReverse[] -->
        </hbox>
        <!-- tag::flexWrapNowrap[] -->
        <flexLayout flexWrap="NOWRAP"
                    css="gap: 0.5em; border: 1px solid #ccc;"
                    width="20em">
            <button text="Button 1" width="9em"/>
            <button text="Button 2" width="9em"/>
            <button text="Button 3" width="9em"/>
        </flexLayout>
        <!-- end::flexWrapNowrap[] -->
        <hbox>
            <!-- tag::flexWrapWrap[] -->
            <flexLayout flexWrap="WRAP"
                        css="gap: 0.5em; border: 1px solid #ccc;"
                        width="20em">
                <button text="Button 1" width="9em"/>
                <button text="Button 2" width="9em"/>
                <button text="Button 3" width="9em"/>
            </flexLayout>
            <!-- end::flexWrapWrap[] -->
            <!-- tag::flexWrapWrapReverse[] -->
            <flexLayout flexWrap="WRAP_REVERSE"
                        css="gap: 0.5em; border: 1px solid #ccc;"
                        width="20em">
                <button text="Button 1" width="9em"/>
                <button text="Button 2" width="9em"/>
                <button text="Button 3" width="9em"/>
            </flexLayout>
            <!-- end::flexWrapWrapReverse[] -->
        </hbox>
    </layout>
</view>