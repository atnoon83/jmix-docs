<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://valuePickerView.title">
    <!-- tag::data[] -->
    <data>
        <!-- end::data[] -->
        <!-- tag::stepDc[] -->
        <instance class="com.company.onboarding.entity.Step" id="stepDc"> <!--1-->
            <fetchPlan extends="_base"/> <!--2-->
            <loader id="stepDl"/>
        </instance>
        <!-- end::stepDc[] -->
        <!-- tag::data[] -->
    </data>
    <!-- end::data[] -->
    <!-- tag::layout[] -->
    <layout>
        <!-- end::layout[] -->
        <!-- tag::basics[] -->
        <valuePicker id="valuePicker" label="Code">
            <actions>
                <action id="generate" icon="REFRESH"/>
                <action id="valueClear" type="value_clear"/>
            </actions>
        </valuePicker>
        <!-- end::basics[] -->
        <!-- tag::data-aware[] -->
        <valuePicker label="msg://com.company.onboarding.entity/Step.name"
                     dataContainer="stepDc"
                     property="name"> <!--3-->
            <actions>
                <action id="lookup" icon="ELLIPSIS_DOTS_H"/>
                <action id="valueClear" type="value_clear"/>
            </actions>
        </valuePicker>
        <!-- end::data-aware[] -->
        <valuePicker id="vPicker" label="Code" allowCustomValue="true">
            <actions>
                <action id="generate" icon="REFRESH"/>
                <action id="valueClear" type="value_clear"/>
            </actions>
        </valuePicker>
        <valuePicker label="valuePicker with predefined action" id="loginValuePicker">
            <actions>
                <!-- tag::clearAction[] -->
                <action id="valueClear" type="value_clear"/>
                <!-- end::clearAction[] -->
            </actions>
        </valuePicker>
        <!-- tag::with-custom-action[] -->
        <valuePicker id="generateLoginPicker" label="Login">
            <actions>
                <action id="valueClear" type="value_clear"/>
                <action id="generate" icon="REFRESH"/>
            </actions>
        </valuePicker>
        <!-- end::with-custom-action[] -->
        <!-- tag::layout[] -->
    </layout>
    <!-- end::layout[] -->
</view>