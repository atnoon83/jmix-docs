<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://emailFieldView.title">
    <!-- tag::data[] -->
    <data>
        <instance class="com.company.onboarding.entity.Customer" id="customerDc"> <!--1-->
            <fetchPlan extends="_base"/> <!--2-->
            <loader id="customerDl"/>
        </instance>
    </data>
    <!-- end::data[] -->
    <!-- tag::layout[] -->
    <layout>
        <!-- end::layout[] -->
        <!-- tag::basics[] -->
        <emailField errorMessage="Enter a valid email address"
                    value="john.doe@email.com"
                    clearButtonVisible="true"
                    label="Email address"
                    width="15em"/>
        <!-- end::basics[] -->
        <!-- tag::data-binding[] -->
        <emailField dataContainer="customerDc"
                    property="email"
                    label="Email"/> <!--3-->
        <!-- end::data-binding[] -->
        <textField dataContainer="customerDc" property="email"/>
        <!-- tag::layout[] -->
    </layout>
    <!-- end::layout[] -->
</view>